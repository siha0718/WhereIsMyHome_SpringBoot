<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.home.user.dao.UserDao">

	<!-- 회원가입  -->
	<insert id="regist" parameterType="User">
		INSERT INTO user
		VALUES(#userid}, #{password}, #{username}, #{address}, #{phone})
	</insert>	
	

	<!-- 로그인  -->
	<select id="login" parameterType="map" resultType="User">
		SELECT userid, password, username, address, phone
		FROM user WHERE id = #{userid} and password = #{password}
	</select>
	
	
	<!-- 회원정보 수정 -->	
	<update id="edit" parameterType="User">
		update user
		<trim prefix="set" suffixOverrides=",">
			<if test="password != null">password = #{password},</if>
			<if test="address != null">address = #{address},</if>
			<if test="phone != null">phone = #{phone},</if>
		</trim>
		where id = #{userid}
	</update>
	
	

	<!-- 사용자 번호 찾기  -->
	<select id="findNo" parameterType="User" resultType="int">
		select no 
		from user
		where id = #{userid}
	</select>
	

	<!-- 즐겨찾기 추가  -->
	<insert id="addStar" parameterType="map">
		INSERT INTO likes
		VALUES(#{no}, #{dongcode})
	</insert>	
	
	

	
	
</mapper>